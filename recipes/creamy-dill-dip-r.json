{
    "title": "Creamy Dill Dip",
    "author": "Allison Dahl Thompson",
    "image": "http://joylovefood.com/wp-content/uploads/2016/09/Creamy-Dill-Dip-3-1.jpg",
    "ingredients": [
        {
            "amount": "8 oz. pkg.",
            "ingredient": "cream cheese, softened"
        },
        {
            "amount": "8 oz. carton",
            "ingredient": "sour cream"
        },
        {
            "amount": "2 Tbsp.",
            "ingredient": "finely chopped green onions"
        },
        {
            "amount": "2 Tbsp.",
            "ingredient": "dried dill weed"
        },
        {
            "amount": "1-2 Tbsp.",
            "ingredient": "milk (optional)"
        },
        {
            "amount": "-",
            "ingredient": "fresh dill (optional)"
        }
    ],
    "directions": [
        {
            "step": "1",
            "process": "In a medium mixing bowl beat the cream cheese, sour cream, green onion, and dill weed until mixture is fluffy."
        },
        {
            "step": "2",
            "process": "Cover and chill for 24 hrs."
        },
        {
            "step": "3",
            "process": "If desired before serving stir the milk into the dip to make the desire consistency."
        },
        {
            "step": "4",
            "process": "If desired garnish with fresh sprig of dill."
        },
        {
            "step": "4",
            "process": "Serve with assorted vegetables."
        }
    ],
    "category": "Dip"
}