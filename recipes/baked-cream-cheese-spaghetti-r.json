{
    "title": "Baked Cream Cheese Spaghetti",
    "author": "",
    "image": "",
    "bake": "350 for 15-20",
    "ingredients": [
        {   
            "type": "meat",
            "ingredient": "Ground Beef",
            "amount": "1 lbs"
        },
        {   
            "type": "spice",
            "ingredient": "Basil, dried",
            "amount": "1 tsp"
        },
        {   
            "type": "produce",
            "ingredient": "Onion",
            "amount": "1 small"
        },
        {   
            "type": "spice",
            "ingredient": "oregano, dried",
            "amount": "1/2 tsp"
        },
        {   
            "type": "spice",
            "ingredient": "parsley, dried",
            "amount": "1/2 tsp"
        },
        {   
            "type": "produce",
            "ingredient": "chopped parsley, fresh leaves",
            "amount": "2 tbsp"
        },
        {   
            "type": "can",
            "ingredient": "tomatoes",
            "amount": "1 28oz can"
        },
        {   
            "type": "pasta",
            "ingredient": "spaghetti",
            "amount": "1 lbs"
        },
        {   
            "type": "spice",
            "ingredient": "Salt and Pepper",
            "amount": "n/a"
        },
        {   
            "type": "spice",
            "ingredient": "red pepper flakes",
            "amount": "1/2 tsp"
        },
        {   
            "type": "oil",
            "ingredient": "Olive Oil",
            "amount": "1 tbsp"
        },
        {   
            "type": "dairy",
            "ingredient": "Cheddar Cheese",
            "amount": "1/2 cup"
        },
        {   
            "type": "dairy",
            "ingredient": "Monterey Jack",
            "amount": "1/2 cup"
        },
        {   
            "type": "dairy",
            "ingredient": "Sour Cream",
            "amount": "1/2 cup"
        },
        {   
            "type": "dairy",
            "ingredient": "Whipped Cream Cheese",
            "amount": "1/2 cup"
        }
    ],
    "directions": [
        {
            "step": "1",
            "process": "Preheat oven to 350*F. Lightly oil a 9x13 baking dish or coat with nonstick spray."
        },
        {
            "step": "2",
            "process": "In a large pot of boiling salted water, cook pasta according to package instructions; drain well. "
        },
        {
            "step": "3",
            "process": "Heat olive oil in a large skillet over medium-high heat. Add ground beef and onion and cook until beef has browned, about 3-5 minutes, making sure to crumble the beef as it cooks; season with salt and pepper, to taste. Drain excess fat."
        },
        {
            "step": "4",
            "process": "Stir in crushed tomatoes, basil, oregano, parsley and red pepper flakes; season with salt and pepper, to taste."
        },
        {
            "step": "5",
            "process": "In a small bowl, whisk together cream cheese and sour cream."
        },
        {
            "step": "6",
            "process": "Add pasta to the prepared baking dish and layer with cream cheese and beef mixture; sprinkle with cheese. "
        },
        {
            "step": "7",
            "process": "Place into oven and bake until bubbly and heated through, about 15-20 minutes."
        },
        {
            "step": "8",
            "process": "Serve, garnished with parsley."
        }
    ]
}